<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/notes"
    tools:context=".fragment.AddFragment">

    <TextView
        android:id="@+id/tvMain"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:text="NOTES"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="26dp" />



    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/btnEdit"
        android:background="@drawable/icon_edit"
        app:layout_constraintTop_toBottomOf="@+id/tvMain"
        app:layout_constraintStart_toEndOf="@+id/tvMain"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="10dp"/>



    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/btnDelete"
        android:background="@drawable/delete"
        app:layout_constraintTop_toBottomOf="@+id/tvMain"
        app:layout_constraintStart_toEndOf="@+id/tvMain"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="285dp"/>

    <ImageView
        android:id="@+id/ivMain"
        android:layout_width="390dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMain" />

    <EditText
        android:id="@+id/idEdtCourseName"
        android:layout_width="350dp"
        android:text="Enter course Name"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMain"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/idEdtCourseDuration"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enter Course Duration"
        app:layout_constraintTop_toBottomOf="@+id/idEdtCourseName"
        tools:layout_editor_absoluteX="16dp" />



    <EditText
        android:id="@+id/idEdtCourseTracks"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enter Course Tracks"
        app:layout_constraintTop_toBottomOf="@+id/idEdtCourseDuration"
        tools:layout_editor_absoluteX="16dp" />




    <EditText
        android:id="@+id/idEdtCourseDescription"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enter Course Description"
        app:layout_constraintTop_toBottomOf="@+id/idEdtCourseTracks"
        tools:layout_editor_absoluteX="16dp" />


    <Button
        android:id="@+id/idBtnAddCourse"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_gray"
        android:text="Add"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/tvMain"
        app:layout_constraintTop_toBottomOf="@+id/idEdtCourseDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>