<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background">


    <EditText
        android:id="@+id/tvBreed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" * Хліб"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/tvBreed"
        android:layout_marginStart="10dp"
        tools:ignore="HardcodedText,MissingConstraints" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvMilk"
        android:text="* Молоко"
        android:textSize="20sp"
        android:textColor="@color/black"
        tools:ignore="HardcodedText"
        app:layout_constraintTop_toBottomOf="@id/tvBreed"
        app:layout_constraintStart_toEndOf="@id/tvBreed"
        android:layout_marginStart="15dp"/>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPepsi"
        android:text="* Pepsi"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvMilk"
        app:layout_constraintStart_toEndOf="@id/tvBreed"
        android:layout_marginStart="15dp"
        tools:ignore="HardcodedText,TextFields" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEgg"
        android:text="* Яйцо"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvPepsi"
        app:layout_constraintStart_toEndOf="@id/tvBreed"
        android:layout_marginStart="15dp"
        tools:ignore="HardcodedText" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvFish"
        android:text="* Риба"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvEgg"
        app:layout_constraintStart_toEndOf="@id/tvBreed"
        android:layout_marginStart="15dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>